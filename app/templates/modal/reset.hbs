{{#unless complete}}
    <div class="modal-body">
        <div class="pure-form pure-form-stacked">
            <fieldset>
                <label for="reset-password-input" style="color:#8c8c8c;">{{t reset.tip}}</label>
                {{input id="reset-password-input" type="password" class="pure-input-1-2" autofocus="autofocus" value=password placeholderTranslation="reset.password"}}
                {{input type="password" class="pure-input-1-2" autofocus="autofocus" value=passwordConfirm placeholderTranslation="reset.passwordConfirm"}}
            </fieldset>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="pure-button pure-button-primary" {{bind-attr disabled="resetDisabled"}} {{action reset}}>{{resetButtonText}}</button>
        {{#if showSpinner}}
            &nbsp; <i class='fa fa-spinner fa-spin'></i>
        {{/if}}
    </div>
{{/unless}}